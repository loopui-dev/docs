---
import { Tabs, TabItem, Code } from "@astrojs/starlight/components";

export interface Props {
    package: string;
}

const PACKAGE_SCOPE = "@loopui";
let { package: p } = Astro.props;
let name = `${PACKAGE_SCOPE}/${p}`;
---

<Tabs syncKey="package-manager">
    <TabItem label="npm" icon="npm">
        <Code code={`npm add ${name}`} lang="sh" />
    </TabItem>
    <TabItem label="Yarn" icon="seti:yarn">
        <Code code={`yarn add ${name}`} lang="sh" />
    </TabItem>
    <TabItem label="pnpm" icon="pnpm">
        <Code code={`pnpm add ${name}`} lang="sh" />
    </TabItem>
    <TabItem label="Deno" icon={{ light: "/deno-light.svg", dark: "/deno-dark.svg" }}>
        <Code code={`deno add npm:${name}`} lang="sh" />
    </TabItem>
    <TabItem label="Bun" icon={{ light: "/bun-light.svg", dark: "/bun-dark.svg" }}>
        <Code code={`bun add ${name}`} lang="sh" />
    </TabItem>
    <TabItem label="vlt" icon="/vlt-light.svg" size="1.5em">
        <Code code={`vlt add ${name}`} lang="sh" />
    </TabItem>
</Tabs>
